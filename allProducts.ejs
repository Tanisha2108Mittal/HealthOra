<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Products | Healthora</title>
    <link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">
    <style>
      /* Page Title */
.page-title {
    text-align: center;
    font-size: 60px;
    margin-bottom: 30px;
    font-weight: 700;
}

/* Category Titles */
h2 {
    font-size: 40px;
    margin: 40px 0 15px;
    padding: 10px 16px;
    border-radius: 8px;
    color: white;
    display: inline-block;
    font-weight: 600;
}

/* Category Colors */
#gluten-free {
    background-color: #56CE8A;   /* Green */
}

#lactose-free {
    background-color: #65A8D2;  /* Blue */
}

#sugar-free {
    background-color: #DF74D8;  /* Pink */
}

#soy-free {
    background-color: #ECB348;  /* Orange */
}

#nut-free {
    background-color: #FF696B;  /* Red */
}

/* Product Grid */
.product-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
    gap: 25px;
    padding: 10px 0 40px;
}

/* Product Card Styling */
.product-card {
    display: block;
    background: #fff;
    padding: 15px;
    border-radius: 12px;
    text-align: center;
    text-decoration: none;
    color: black;
    box-shadow: 0 4px 10px rgba(0,0,0,0.08);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    cursor: pointer;
}

.product-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 18px rgba(0,0,0,0.12);
}

.product-card img {
    width: 100%;
    height: 200px;
    object-fit: contain;
    margin-bottom: 10px;
    border-radius: 8px;
}

.product-card h3 {
    font-size: 16px;
    margin: 10px 0;
    font-weight: 600;
}

.product-card p {
    color: #666;
    font-size: 14px;
    margin: 5px 0;
}

.product-card .price {
    font-size: 18px;
    font-weight: 700;
    color: #2e7d32;
    margin-top: 10px;
}

.product-card .badge {
    display: inline-block;
    background: #2e7d32;
    color: white;
    padding: 4px 8px;
    border-radius: 4px;
    font-size: 12px;
    margin-top: 8px;
}

    </style>
</head>
<body>
  <!-- Header -->
  <%- include("partials/header") %>

  <div style="max-width: 1200px; margin: 0 auto; padding: 20px;">
    <h1 class="page-title">All Products</h1>

    <!-- Each category section -->
    <h2 id="gluten-free">Gluten Free</h2>
    <div class="product-grid" id="gluten-free-container"></div>

    <h2 id="nut-free">Nut Free</h2>
    <div class="product-grid" id="nut-free-container"></div>

    <h2 id="lactose-free">Lactose Free</h2>
    <div class="product-grid" id="lactose-free-container"></div>

    <h2 id="sugar-free">Sugar Free</h2>
    <div class="product-grid" id="sugar-free-container"></div>

    <h2 id="soy-free">Soy Free</h2>
    <div class="product-grid" id="soy-free-container"></div>
  </div>

  <!-- Footer -->
  <%- include("partials/footer") %>

  <script src="/cartAPI.js"></script>
  <script src="/products.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
        setTimeout(loadAllProducts, 100);
    });
  </script>

</body>
</html>
